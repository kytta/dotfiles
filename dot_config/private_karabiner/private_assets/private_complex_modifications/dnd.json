                            {
                                "key_code": "spacebar"
                            },
                            {
                                "any": "keyboard_fn"
                            }
                        ],
                        "modifiers": {
                            "mandatory": [
                                "fn"
                            ]
                        }
                    },
                    "to": [
                        {
                            "key_code": "f16"
                        }
                    ],
                    "type": "basic",
                    "conditions": [
                        {
                            "type": "device_if",
                            "identifiers": [
                                {
                                    "vendor_id": 1452,
                                    "product_id": 591
                                }
                            ]
                        }
                    ]
                }
            ]
        }
    ]
}
