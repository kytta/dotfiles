[merge]
	tool = vscode
[mergetool "vscode"]
	cmd = code --wait $MERGED
[diff]
	tool = difftastic
[difftool "vscode"]
	cmd = code --wait --diff $LOCAL $REMOTE
[difftool "difftastic"]
	cmd = difft $LOCAL $REMOTE
[gpg]
