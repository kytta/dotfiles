#!/bin/sh
#
# Tries to install must-have packages:
#   - bat
#   - curl
#   - exa
#   - fd
#   - git
#   - micro
#   - nano
#   - ripgrep
#   - wget
#   - xclip (only on linux)
#   - zoxide
#   - zsh

set -eux

if command -v brew > /dev/null; then
  brew update --force
  brew install --formulae \
    bat \
    curl \
    exa \
    fd \
    git \
    micro \
    nano \
    ripgrep \
    wget \
    zoxide \
    zsh
elif command -v dnf > /dev/null; then
  if [ -f "/etc/fedora-release" ]; then
    sudo dnf --refresh -y install \
      bat \
      curl \
      exa \
      fd-find \
      git \
      micro \
      nano \
      ripgrep \
      wget \
      xclip \
      zoxide \
      zsh
  else
    echo "Detected 'dnf', but can't determine OS."
  fi
elif command -v apt > /dev/null; then
  if [ -f "/etc/debian_version" ]; then
    sudo apt -y update
    sudo apt -y --no-install-recommends --ignore-missing install \
      bat \
      curl \
      exa \
      fd-find \
      git \
      micro \
      nano \
      ripgrep \
      wget \
      zoxide \
      xclip \
      zsh
  elif grep "NAME=\"Ubuntu\"" /etc/os-release; then
    sudo apt -y update
    sudo apt -y --no-install-recommends --ignore-missing install \
      bat \
      curl \
      exa \
      fd-find \
      git \
      micro \
      nano \
      ripgrep \
      wget \
      zoxide \
      xclip \
      zsh
  else
    echo "Detected 'apt', but can't determine OS."
  fi
elif command -v apk > /dev/null; then
  if grep "NAME=\"Alpine Linux\"" /etc/os-release; then
    apk add --update-cache \
      bat \
      curl \
      exa \
      fd \
      git \
      micro \
      nano \
      ripgrep \
      wget \
      xclip \
      zoxide \
      zsh
  else
    echo "Detected 'apk', but can't determine OS."
  fi
else
  echo "I don't know how to install packages on this system"
  exit 1
fi
